{
    "mode": "development",
    "entry": "./src/index.js",
    "output": {
      "filename": "bundle.js",
      "path": "/dist"
    },
    "resolve": {
      "extensions": [".ts", ".tsx", ".js"]
    },
    "module": {
      "rules": [
        {
          "loader": "ts-loader"
        }
      ]
    },
    "devServer": {
      "contentBase": "./dist",
      "hot": true
    }
  }